@model MvcMovie.Models.SerieGenreViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Serie</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Series" asp-action="Index" method="get">
    <p>
        <select asp-for="SerieGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>

        Title: <input asp-for="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Series[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Series[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Series[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Series[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Series[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Series)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>